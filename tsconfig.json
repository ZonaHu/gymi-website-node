{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "strict": true,
        "jsx": "react",
        "sourceMap": false,
        "lib": [
            "dom",
            "es2017"
        ],
        "baseUrl": ".",
        "paths": {
            "backend/*": ["./backend_app/*"],
            "frontend/*": ["./frontend_app/*"],
            "common/*": ["./common/*"]
        }
    },

    "exclude": [
        "node_modules"
    ]
}