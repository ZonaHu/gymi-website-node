{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-microsoft-contrib"
    ],
    "jsRules": {},
    // Policy: if you add a rule to ignore, give a reason why it is good to
    // disable
    "rules": {
        // allows the word "type" to be used in a type, which is idiomatic in React
        "no-reserved-keywords": [false],
        // allow CSS to be imported with side effects
        "no-import-side-effect": [true, {
            "ignore-module": "(\\.(le|c)ss)$"
        }],
        // allow capitalized letters for function-name so that pure stateless
        // react functions aren't flagged
        "function-name": [true, {
            "function-regex": "^[a-zA-Z][\\w\\d]+$"
        }],
        // allow PascalCase var names to allow for React components to be defined
        "variable-name": [
            true,
            "allow-pascal-case"
        ],
        // disable react-tsx-curly-spacing because it seems buggy, calling this
        // code wrong: `store={ store }`
        "react-tsx-curly-spacing": [false],
        // disable no-backbone-get-set-outside-model because we are not using
        // backbone
        "no-backbone-get-set-outside-model": [false],
        // disable import-name because renaming imported modules can be useful,
        // like when a db method and a set of endpoints share the same name
        // but reside in different folders, and therefore are differently
        // namespaced
        "import-name": [false],
        // disable export-name because allowing for files with individual named
        // exports allows for greater flexibility in the future, for example in
        // error definitions
        "export-name": [false],
        // disable no-default-export because default exports are not bad
        "no-default-export": false,
        // disable typedef because explicitly adding them all is just redundant
        "typedef": [false],
        // disable no-multiline-string because multiline strings can make
        // SQL statements more readable
        "no-multiline-string": [false]
    },
    "rulesDirectory": []
}
